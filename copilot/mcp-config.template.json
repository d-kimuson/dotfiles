{
  "mcpServers": {
    "modular-mcp": {
      "type": "local",
      "command": "npx",
      "tools": [
        "*"
      ],
      "args": [
        "-y",
        "@kimuson/modular-mcp@latest",
        "$HOME/dotfiles/modular-mcp.json"
      ]
    },
    "super-agent": {
      "type": "local",
      "command": "node",
      "tools": [
        "*"
      ],
      "args": [
        "$HOME/repos/super-agent/dist/cli/index.mjs",
        "mcp",
        "serve"
      ]
    }
  }
}