{
  "$schema": "https://raw.githubusercontent.com/d-kimuson/modular-mcp/refs/heads/main/config-schema.json",
  "mcpServers": {
    "context7": {
      "description": "Use when you need to search library documentation.",
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "env": {}
    },
    "playwright": {
      "description": "Use when you need to control web browsers.",
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"],
      "env": {}
    },
    "github-server": {
      "description": "Use when you need to access GitHub (repos, issues, PRs)",
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp",
      "headers": {
        "Authorization": "Bearer FIXME"
      }
    },
    "atlassian": {
      "description": "Use when working with Atlassian products (Jira, Confluence)",
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ]
    },
    "obsidian": {
      "description": "Use to search and manage personal notes in Obsidian",
      "command": "/Users/kaito-kimura/ObsidianLocalVault/仕事用(Local)/.obsidian/plugins/mcp-tools/bin/mcp-server",
      "args": [],
      "env": {
        "OBSIDIAN_API_KEY": "FIXME"
      }
    }
  }
}